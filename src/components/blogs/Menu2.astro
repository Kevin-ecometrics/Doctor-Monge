---
// Definir los blogs con sus URLs
const blogsURL = [
  {
    id: 1,
    url: "/blogs/Juanetes-sintomas-deteccion-y-tipos-de-cirugia-para-eliminarlos/",
  },
  {
    id: 2,
    url: "/blogs/Porque-se-dice-que-el-cuerpo-rechazo-de-material-Factores-asociados-al-fallo-en-la-osteosintesis-de-fracturas/",
  },
  {
    id: 3,
    url: "/blogs/Tratamiento-conservador-vs-cirugia-Cuando-un-tratamiento-conservador-falla-y-requiere-intervencion-quirurgica-en-hernia-discal-cervical/",
  },
  {
    id: 4,
    url: "/blogs/infiltraciones-en-la-rodilla-con-acido-hialuronico-para-tratamiento-de-artrosis-de-rodilla/",
  },
  {
    id: 5,
    url: "/blogs/Osteoporosis-Una-condicion-silenciosa-que-afecta-a-la-mitad-de-la-poblacion-mayor/",
  },
  { id: 6, url: "/blogs/Lesion-de-Ligamento-cruzado-anterior/" },
  { id: 7, url: "/blogs/Pseudoartrosis-y-Retraso-de-Consolidacion/" },
  { id: 8, url: "/blogs/Fractura-de-tibia-y-Perone/" },
];

// Obtener la ruta actual
const currentPath = Astro.url.pathname;

// Encontrar el Ã­ndice basado en la ruta
let currentIndex = -1;
blogsURL.forEach((blog, index) => {
  if (blog.url === currentPath) {
    currentIndex = index;
  }
});
---

<section class="bottom-0 right-0 fixed mb-4 mr-4">
  <div class="flex items-center justify-center space-x-4">
    {
      currentIndex > 0 && (
        <a href={blogsURL[currentIndex - 1].url}>
          <button
            aria-label="Go to previous blog"
            class="p-3 bg-gradient-to-r from-blue-500 to-blue-700 text-white rounded-full shadow-lg hover:from-blue-700 hover:to-blue-900 transition duration-300 transform hover:scale-110"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-8 h-8"
            >
              <path
                stroke-Linecap="round"
                stroke-Linejoin="round"
                stroke-Width={2}
                d="M15 19l-7-7 7-7"
              />
            </svg>
          </button>
        </a>
      )
    }

    <a href="/">
      <button
        aria-label="Go to home page"
        class="p-3 bg-gradient-to-r from-blue-500 to-blue-700 text-white rounded-full shadow-lg hover:from-blue-700 hover:to-blue-900 transition duration-300 transform hover:scale-110"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-Linecap="round"
          stroke-Linejoin="round"
          stroke-Width={2}
          class="w-8 h-8"
        >
          <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
          <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
          <path d="M10 12h4v4h-4z"></path>
        </svg>
      </button>
    </a>

    {
      currentIndex < blogsURL.length - 1 && (
        <a href={blogsURL[currentIndex + 1].url}>
          <button
            aria-label="Go to next blog"
            class="p-3 bg-gradient-to-r from-blue-500 to-blue-700 text-white rounded-full shadow-lg hover:from-blue-700 hover:to-blue-900 transition duration-300 transform hover:scale-110"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-8 h-8"
            >
              <path
                stroke-Linecap="round"
                stroke-Linejoin="round"
                stroke-Width={2}
                d="M9 5l7 7-7 7"
              />
            </svg>
          </button>
        </a>
      )
    }
  </div>
</section>
