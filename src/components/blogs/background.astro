---
const { image, title, date } = Astro.props;
---

<div class="relative">
  <!-- Imagen de fondo -->
  <img
    src={image}
    alt="fondo"
    class="w-full h-screen object-cover object-center"
  />

  <!-- Fondo negro con opacidad -->
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>

  <!-- Contenido -->
  <div class="lg:w-[60%]">
    <div
      class="hidden lg:flex lg:flex-col lg:items-start lg:justify-center lg:absolute lg:left-48 lg:top-1/2 lg:bottom-1/2"
    >
      <h2 class="text-[40px] font-semibold text-white mb-2">
        {date}
      </h2>
      <h1 class="text-[60px] font-semibold text-white">
        {title}
      </h1>
    </div>
  </div>
  <div class="px-4 py-2 pointer-events-none">
    <h2 class="text-[20px] lg:hidden font-semibold text-white text-start">
      {date}
    </h2>
    <h1 class="text-[40px] lg:hidden font-semibold text-white text-start">
      {title}
    </h1>
  </div>
</div>
