---
interface Props {
  URL: boolean;
}

const { URL } = Astro.props;

import Facebook from "@components/icons/Facebook.astro";
import Instagram from "@components/icons/Instagram.astro";
import Tiktok from "@components/icons/Tiktok.astro";
import Doctoralia from "@components/icons/Doctoralia.astro";

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-black from-gray-900 to-gray-800 bg-opacity-30 text-white pt-12 pb-6 px-4"
>
  <div class="container mx-auto max-w-7xl">
    <!-- Sección de Procedimientos centrada -->

    <!-- Contenido principal del footer -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10 mb-12">
      <!-- Columna 1: Información de contacto -->
      <div class="flex flex-col items-center lg:items-start">
        <div class="flex items-center mb-6">
          <a href="/" class="flex items-center">
            <img
              src="/El-doctor-Ricardo-Monge-es-ortopedista-especialista-en-rodilla-cadera-y-espalda.webp"
              alt={URL ? "Dr. Monge Orthopedics" : "Dr. Monge Ortopedia"}
              class="max-h-16"
            />
          </a>
        </div>

        <div class="space-y-4 text-center lg:text-left">
          <div class="flex items-center justify-center lg:justify-start">
            <svg
              class="w-5 h-5 mr-3 text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="text-gray-300 text-sm">
              Fray Servando Teresa de Mier 1351<br />
              {
                URL
                  ? "Suite 809-810, Tijuana, B.C."
                  : "Interior 809-810, Tijuana, B.C."
              }
            </p>
          </div>

          <div class="flex items-center justify-center lg:justify-start">
            <svg
              class="w-5 h-5 mr-3 text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href="mailto:pacientes@mongeortopedia.com"
              class="text-gray-300 hover:text-blue-400 transition-colors text-sm"
            >
              pacientes@mongeortopedia.com
            </a>
          </div>

          <div class="flex items-center justify-center lg:justify-start">
            <svg
              class="w-5 h-5 mr-3 text-blue-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <a
              href="tel:+526649763510"
              class="text-gray-300 hover:text-blue-400 transition-colors text-sm"
            >
              +52 664 976 3510
            </a>
          </div>
        </div>
      </div>

      <!-- Columna 2: Enlaces rápidos -->
      <div class="flex flex-col items-center">
        <h3
          class="text-xl font-bold mb-6 relative pb-2 after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-16 after:h-0.5 after:bg-gradient-to-r after:from-blue-400 after:to-cyan-300"
        >
          {URL ? "Quick Links" : "Enlaces Rápidos"}
        </h3>
        <nav class="grid grid-cols-1 gap-y-4 text-center">
          <a
            href={URL ? "/en/privacy" : "/politicas"}
            class="text-gray-300 hover:text-blue-400 transition-colors hover:underline underline-offset-4"
          >
            {URL ? "Privacy Policy" : "Políticas de Privacidad"}
          </a>
          <a
            href={URL ? "/en/" : "/"}
            class="inline-block px-6 py-2 bg-gradient-to-r from-blue-400 to-cyan-300 text-black font-medium rounded-full hover:opacity-90 transition-opacity mt-4"
          >
            {URL ? "Go to Home" : "Ir al Inicio"}
          </a>
        </nav>
      </div>

      <!-- Columna 3: Redes sociales -->
      <div class="flex flex-col items-center">
        <h3
          class="text-xl font-bold mb-6 relative pb-2 after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-16 after:h-0.5 after:bg-gradient-to-r after:from-blue-400 after:to-cyan-300"
        >
          {URL ? "Follow Us" : "Síguenos"}
        </h3>
        <div class="flex space-x-6">
          <a
            href="https://www.facebook.com/drmonge.ortho/?locale=ms_MY"
            target="_blank"
            rel="noopener noreferrer"
            class="text-white hover:text-blue-400 transition-all duration-300
                    p-2 rounded-full hover:bg-gray-800 hover:scale-110"
          >
            <Facebook className="text-2xl" />
          </a>
          <a
            href="https://www.instagram.com/drmonge.ortho/?hl=es"
            target="_blank"
            rel="noopener noreferrer"
            class="text-white hover:text-blue-400 transition-all duration-300
                    p-2 rounded-full hover:bg-gray-800 hover:scale-110"
          >
            <Instagram className="text-2xl" />
          </a>
          <a
            href="https://www.tiktok.com/@elmongedelaortopedia"
            target="_blank"
            rel="noopener noreferrer"
            class="text-white hover:text-blue-400 transition-all duration-300
                    p-2 rounded-full hover:bg-gray-800 hover:scale-110"
          >
            <Tiktok className="text-2xl" />
          </a>
          <a
            href="https://www.doctoralia.com.mx/ricardo-luis-monge-romero/ortopedista-traumatologo/tijuana"
            target="_blank"
            rel="noopener noreferrer"
            class="text-white hover:text-blue-400 transition-all duration-300
                    p-2 rounded-full hover:bg-gray-800 hover:scale-110"
          >
            <Doctoralia className="text-2xl" />
          </a>
        </div>
      </div>
    </div>

    <!-- Línea divisoria y copyright -->
    <div class="border-t border-gray-700 my-6"></div>
    <div class="mt-10 text-center">
      <p class="text-gray-400 text-sm">
        &copy; {currentYear}{" "}
        {
          URL
            ? "Dr. Monge. All rights reserved. Developed by "
            : "Dr. Monge. Todos los derechos reservados. Desarrollado por "
        }
        <a
          href="https://ecommetrica.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-blue-400 hover:underline">Ecommetrica</a
        >
      </p>
      <p class="text-gray-500 text-xs mt-2">
        {
          URL
            ? "Traumatology and Orthopedics | Tijuana, Mexico"
            : "Traumatología y Ortopedia | Tijuana, México"
        }
      </p>
    </div>
  </div>
</footer>
